{
    "$schema": "http://json-schema.org/schema#",
    "$id": "https://github.com/qbicsoftware/metadata-model-specification/tree/master/schema/pipeline_output.json",
    "title": "Pipeline Output Schema",
    "description": "Schema to describe the output structure of pipelines",
    "type": "object",
    "definitions": {
        "ResultsFolder": {
            "type": "string",
            "label": "Pipeline results directory",
            "properties": {
                "pipeline_info": {
                    "type": "string",
                    "default": "pipeline_info",
                    "label": "The pipeline info directory",
                    "properties": {
                        "pipeline_report": {
                            "type": "string",
                            "default": "pipeline_report.txt"
                        },
                        "execution_trace": {
                            "type": "string",
                            "default": "execution_trace.txt"
                        },
                        "software_versions": {
                            "type": "string",
                            "default": "software_versions.csv"
                        }
                    }
                },
                "qc": {
                    "type": "string",
                    "label": "The folder containing the pipeline QC",
                    "default": "multiqc"
                },
                "results": {
                    "type": "array",
                    "label": "List containing the different pipeline output folders.",
                    "properties": {
                        "fastqc": {
                            "type": "string",
                            "default": "fastqc",
                            "label": "Directory containing fastqc results"
                        }
                    }
                }
            }
        }
    }
}